<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="guestbook">
	<delete id = "delete" parameterType = "int">
		<![CDATA[
		delete from guest
		where person_id = #{jiminpark}
		]]>
		
	</delete>
	
	<insert id = "insert" parameterType = "com.javaex.vo.guestbookVo" >
		<![CDATA[ insert into guest
		values(null, #{name}, #{password}, #{comments}) ]]>
	</insert>
	
	<select id = "selectList" resultType="com.javaex.vo.guestbookVo">
		<![CDATA[ select person_id, name, pw, comments from guest ]]>
	</select>
	
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.guestbookVo">
		<![CDATA[ select person_id, name, pw, comments from guest where person_id = #{personId} ]]>
	</select>
	
	<update id="update" parameterType = "com.javaex.vo.guestbookVo" >
		<![CDATA[ update person set name = #{name} , pw = #{password} , comments = #{comments}  where person_id = #{person_Id} ]]>
	</update>
	
	
	
</mapper>